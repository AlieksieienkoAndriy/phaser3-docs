{
    "tags": {
        "allowUnknownTags": true
    },
    "markdown"  : {
        "parser"   : "gfm",
        "hardwrap" : true
    },
    "source": {
        "include": [
            "../phaser/src/phaser.js",
            "../phaser/src/gameobjects/index.js",
            "../phaser/src/gameobjects/components/",
            "../phaser/src/gameobjects/GameObject.js",
            "../phaser/src/gameobjects/GameObjectFactory.js",
            "../phaser/src/gameobjects/blitter/Blitter.js",
            "../phaser/src/gameobjects/blitter/BlitterFactory.js",
            "../phaser/src/gameobjects/blitter/Bob.js"
        ],
        "test": [
            "../phaser/src/actions/",
            "../phaser/src/math/",
            "../phaser/src/utils/",
            "../phaser/src/geom/index.js",
            "../phaser/src/geom/circle/"
        ],
        "exclude": [
            "../phaser/src/physics/matter-js/lib",
            "../phaser/src/polyfills"
        ],
        "includePattern": ".+\\.js?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "jsdoc-plugins/typedef"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": false,
            "useLongnameInNav": true
        }
    },
    "opts": {
        "debug": true,
        "destination": "./out/",
        "__destination": "./out/docs.json",
        "encoding": "utf8",
        "outputSourceFiles": false,
        "outputSourcePath": true,
        "recurse": true,
        "private": false,
        "lenient": true,
        "sourceType": "script",
        "template": "templates/default"
    }
}